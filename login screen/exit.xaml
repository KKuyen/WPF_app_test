<Window x:Class="login_screen.exit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:login_screen"
        mc:Ignorable="d"
        Title="exit" Height="232" Width="436" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-6" Background="Transparent">
        <TextBlock Text="Do you sure you want to log out?" FontSize="25" HorizontalAlignment="Center" Margin="0,41,0,111" />


        <Button Background="red" Margin="85,111,249,55">
            <Button.Content>
                <TextBlock Text="YES" FontSize="25" Foreground="White" MouseDown="TextBlock_MouseDown">

                </TextBlock>
            </Button.Content>
        </Button>
        <Button Background="Green" Margin="240,111,94,55">
            <TextBlock Text="NO" FontSize="25" Foreground="White"/>
        </Button>
    </Grid>
</Window>
